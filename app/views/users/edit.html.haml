= link_to 'Назад', user_path

= form_for @user, html: { multipart: true } do |f|

  - if @user.errors.any?
    %h3 Возникшие ошибки:
    %ul
      - @user.errors.full_messages.each do |message|
        %li
          = message

  = f.label 'Имя: '
  = f.text_field :first_name
  %br

  = f.label 'Фамилия: '
  = f.text_field :last_name
  %br

  = f.label 'Email: '
  = f.text_field :email
  %br

  = f.label 'Должность: '
  = f.text_field :post
  %br

  = f.label 'Skype: '
  = f.text_field :skype
  %br

  = f.label 'Телефон: '
  = f.text_field :phone
  %br

  = f.file_field :avatar
  %br

  = f.button 'Обновить'

- content_for :left_sidebar, render(partial: 'left_sidebar')