= javascript_include_tag 'stickers'
= javascript_include_tag 'charCount'

= form_for @sticker, remote: true, html: { role: 'form' } do |f|
  #error_explanation.bg-danger.text-danger
  .form-group.sticker_description
    = f.label 'Описание'
    = f.text_field :description, class: 'form-control'
  - unless @sticker.new_record? || (cannot? :change_status, @sticker)
    .form-group.sticker_status
      = f.label 'Статус:'
      = f.select(:status, Sticker::STATUS, {}, class: 'form-control')
  - if can? :assign, @sticker
    .form-group.sticker_performer
      = f.label 'Назначить на:'
      = f.select(:performer_id, [[]] + @performers, {}, class: 'form-control')
  .form-group
    = f.submit 'Сохранить', class: 'btn btn-default'