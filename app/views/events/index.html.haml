= stylesheet_link_tag 'events'

.col-xs-5
  .panel.add-shadows
    .panel-heading
      .panel-title
        = "Список событий за #{Event::MONTHS[set_month(params[:start_date])]}"
        -if events_current_month(params[:start_date]).present?
          .panel-body
            .items-list
              = render partial: 'events_list', locals: { events: @events }
        -else
          = 'пуст.'
.col-xs-7
  .panel.add-shadows
    .panel-heading
      .panel-title
        Календарь событий
    .panel-body
      .calendar
        = link_to 'Создать новое событие', new_event_path, remote: true, class: 'btn btn-success pull-right'
        = render partial: 'calendar', locals: { events: @events }