= form_for @event, remote: true, html: { role: 'form' } do |f|
  #error_explanation.bg-danger.text-danger
  .form-group
    = f.label 'Имя:'
    = f.text_field :name, class: 'form-control'
  - if @staff_relations.present?
    .form-group
      = f.label 'На вакансию:'
      = f.select :staff_relation, @staff_relations.collect{ |sr| [get_sr_name(sr), sr.id] }, {}, { class: 'form-control' }
  .form-group
    = f.label 'Дата события:'
    = f.datetime_select :starts_at, default: @date, class: 'form-control'
  .form-group
    = f.label 'Описание:'
    = f.text_area :description, rows: 3, class: 'form-control'
  .form-group
    = f.submit 'Сохранить', class: 'btn btn-default'
