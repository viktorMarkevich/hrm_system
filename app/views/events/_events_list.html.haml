= render 'edit_event_dialog'

.items-list{ class: time_is.to_s }
  %table.table.table-bordered.table-list{ class: time_is == :future ? 'table-hover' : nil }
    %thead
      %tr
        %th Событие
        %th На вакансию
        %th С кем
        %th Время события
        %th Описание
        %th Действия
    %tbody
      - events.each do |event|
        %tr
          %td
            %span.label{ class: set_label_class(event) }= event.name
          - if event.staff_relation
            %td= event.staff_relation.vacancy.name
            %td= event.staff_relation.candidate.name
          - else
            %td= '------'
            %td= '------'
          %td
            %span.label.label-primary= event.will_begin_at.strftime('%H:%M')
            = event.will_begin_at.strftime('%d/%m/%Y')
          %td= event.description
          %td
            - if can? :update, event
              %btn.glyphicon.glyphicon-edit.edit-event{ 'data-id': event.id }
            - if can? :destroy, event
              = link_to '', event, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'glyphicon glyphicon-remove'