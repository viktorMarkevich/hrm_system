.panel-title
  = "Список событий за #{Event::MONTHS[set_month(params[:start_date])]}"
  = 'пуст.' unless events_current_month(params[:start_date]).present?
-if @events.present?
  .panel-body
    .items-list
      %table.table.table-bordered.table-hover
        %thead
          %tr
            %th Событие
            %th На вакансию
            %th С кем
            %th Назначено на
            %th Действия
        %tbody
          - (events.count < @events.count ? events : @events).each do |event|
            %tr
              %td
                %span.label.label-default= event.name
              -if event.staff_relation
                %td= event.staff_relation.vacancy.name
                %td= event.staff_relation.candidate.name
              %td
                %span.label.label-primary= event.starts_at.strftime('%H:%M')
                = event.starts_at.strftime('%d/%m/%Y')
              %td
                = link_to '', edit_event_path(event), class: 'glyphicon glyphicon-edit', remote: true
                = link_to '', event, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'glyphicon glyphicon-remove'