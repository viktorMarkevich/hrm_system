!!!
%html
  %head
    %title Faceit
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %div.top
    .wrapper#brand
      .navigate.row
        .brand.fixed.pull-left
          %ul.nav.navbar-nav.navbar-left
            %li
              %a{ href: '#' }
                Faseit-HRM
                %br/
                system
        .fixed.col-md-offset-3.col-md-3
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li.nav
                %a{ href: '#' } Органайзер
              %li.nav
                %a{ href: '#' } Вакансии
              %li.nav
                %a{ href: '#' } Кандидаты
              %li.nav{ style:'border-right: 1px solid black' }
                %a{ href: '#' } Компании
        .menu.fixed.col-md-offset-3.col-md-1
          %ul.nav.navbar-nav.navbar-right
            %li
              - if user_signed_in?
                = link_to 'Выйти', destroy_user_session_path, method: :delete
        .fixed.col-md-offset-3.col-md-4
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li.icon
                %a{ href: '#' }
                  %i.glyphicon.glyphicon-calendar
              %li.icon
                %a{ href: '#' }
                  %i.glyphicon.glyphicon-plus
              %li.icon
                %a{ href: '#' }
                  %i.glyphicon.glyphicon-plus
              %li.icon
                %a{ href: '#' }
                  %i.glyphicon.glyphicon-plus
        .fixed.col-md-offset-1.col-md-2
          %ul.nav.navbar-nav.navbar-right
            %li
              - if user_signed_in?
                = link_to current_user.email, user_path(current_user)
              -else
                = link_to  'Зарегистрироваться', new_user_registration_path
                = 'или'
                = link_to  'Войти', new_user_session_path    .container-fluid
    .container-fluid
      .row
        .col-xs-offset-1.col-xs-2.sidebar_left
          %h2
            left sidebar
        .wrapper.col-xs-offset-1.col-xs-7.col-xs-offset-1.wraper
          = yield