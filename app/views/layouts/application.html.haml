!!!
%html
  %head
    %title Faceit-hrm
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body.jumbotron
    %nav.navbar.navbar-inverse
      .navbar-header
        %button.navbar-toggle.collapsed{ 'aria-expanded' => 'false', 'data-target' => '#bs-navbar-collapse-1', 'data-toggle' => 'collapse', type: 'button' }
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to 'Faseit-HRM system', root_path, class: 'navbar-brand'
      #bs-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li
            = link_to 'Органайзер', stickers_path
            = link_to events_path do
              %i.glyphicon.glyphicon-calendar
          %li
            = link_to 'Вакансии', vacancies_path
            %span.sr-only
            = link_to new_vacancy_path, id: 'add-vacancy' do
              %i.glyphicon.glyphicon-plus
          %li
            = link_to 'Кандидаты', candidates_path
            = link_to new_candidate_path, id: 'add-candidate' do
              %i.glyphicon.glyphicon-plus
          %li
            = link_to 'Компании', companies_path
            = link_to new_company_path, id: 'add-company' do
              %i.glyphicon.glyphicon-plus
          - if current_user.try(:post) == 'Директор'
            %li
              = link_to 'Менеджеры', users_path
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to user_path(current_user) do
              %i.glyphicon.glyphicon-user
              = current_user.email
          %li
            = link_to destroy_user_session_path do
              %i.glyphicon.glyphicon-off
              = 'Выйти'
    .container-fluid
      = flash[:notice]
      .row
        - if controller.controller_name == 'stickers' || controller.controller_name == 'archives'
          .row
            .col-xs-5
              - if @events.present?
                .row
                  .col-xs-12
                    .panel.add-shadows
                      .panel-heading
                        .row.panel-title
                          .col-xs-12
                            = 'Предстоящие события'
                      .panel-body
                        .row
                          .col-xs-12
                            %table.table.table-striped
                              %tbody
                                - @events.each do |event|
                                  %tr
                                    %td
                                      %span.label.label-default
                                        Интервью
                                      = return_upcoming_events(event)
              .row
                .col-xs-12
                  .panel.add-shadows
                    .panel-heading
                      .row.panel-title
                        .col-xs-12
                          = 'Последние действия над вакансиями'
                    .panel-body
                      .row
                        .col-xs-12
                          %table.table.table-striped
                            %tbody
                              - @staff_relations.each do |sr|
                                %tr
                                  %td= link_to sr.vacancy.try(:name), vacancy_path(sr.vacancy || '#'), id: 'vacancy-name'
                                  %td= "кандидат #{link_to sr.candidate.try(:name), candidate_path(sr.candidate.try(:name) || '#')}".html_safe
                                  %td
                                    %span{ class: "label label-#{return_status_label(sr)}" }
                                      = sr.status
                                  %td
                                    .label.label-primary
                                      = sr.updated_at.strftime('%e %b %H:%M')
            .col-xs-7
              .panel.panel-default.add-shadows
                .panel-body
                  = yield
        - else
          .row
            .col-xs-2
              .panel.panel-body
                = yield :left_sidebar
            .col-xs-10
              .row
                .col-xs-12
                  .panel.panel-body
                    = yield
              = yield :footer_panel

