!!!
%html
  %head
    %title Faceit-hrm
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'vacancies'
    = csrf_meta_tags
  %body.jumbotron
    .container-fluid
      .row.navbar.navbar-default
        .col-xs-12
          .row
            .col-xs-2
              .navbar-header
                = link_to 'Faseit-HRM system', root_path, class: 'navbar-brand'
            .col-xs-7
              %ul.nav.nav-pills
                %li
                  = link_to 'Органайзер', stickers_path, class: "btn #{active_class('stickers')}"
                  = link_to events_path, class: "btn #{active_class('events')}" do
                    %i.glyphicon.glyphicon-calendar
                %li
                  = link_to 'Вакансии', vacancies_path, class: "btn #{active_class('vacancies')}"
                  = link_to new_vacancy_path, class: "btn #{active_class('vacancies', new_vacancy_path)}", id: 'add-vacancy' do
                    %i.glyphicon.glyphicon-plus
                %li
                  = link_to 'Кандидаты', candidates_path, class: "btn #{active_class('candidates')}"
                  = link_to new_candidate_path, class: "btn #{active_class('candidates', new_candidate_path)}", id: 'add-candidate' do
                    %i.glyphicon.glyphicon-plus
                %li
                  = link_to 'Компании', companies_path, class: "btn #{active_class('companies')}"
                  = link_to new_company_path, class: "btn #{active_class('companies', new_company_path)}", id: 'add-company' do
                    %i.glyphicon.glyphicon-plus
                - if current_user.try(:post) == 'Директор'
                  %li
                    = link_to 'Менеджеры', users_path, class: "btn #{active_class('users')}"
            .col-xs-3
              %ul.nav.navbar-nav.navbar-right
                - if user_signed_in?
                  %li
                    = link_to user_path(current_user) do
                      %i.glyphicon.glyphicon-user
                      = current_user.email
                  %li
                    = link_to destroy_user_session_path do
                      %i.glyphicon.glyphicon-off
                      = 'Выйти'
      = flash[:notice]
      .row.well
        - if controller.controller_name == 'stickers' || controller.controller_name == 'archives'
          .row
            .col-xs-5
              .panel.panel-default
                .panel-body
                  .row
                    .col-xs-12
                      .panel.panel-primary
                        .panel-heading
                          .row.panel-title
                            .col-xs-12
                              = 'Предстоящие события'
                        .panel-body
                          .row
                            .col-xs-12
                              -@events.each do |event|
                                %table.table.table-bordered.table_action
                                  %tbody
                                    %tr
                                      %td= event.starts_at.strftime('%b %e %H:%M')
                                      %td= event.description
                  .row
                    .col-xs-12
                      .panel.panel-primary
                        .panel-heading
                          .row.panel-title
                            .col-xs-12
                              = 'Последние действия над вакансиями'
                        .panel-body
                          .row
                            .col-xs-12
                              -@vacancies.each do |vacancy|
                                %table.table.table-bordered.table_action
                                  %tbody
                                    %tr
                                      %td= link_to vacancy.name, vacancy_path(vacancy), id: 'vacancy-name'
                                      %td= vacancy.status
                                      %td= vacancy.updated_at.strftime('%b %e %H:%M')
            .col-xs-7
              .panel.panel-default
                .panel-body
                  = yield
        - else
          .row
            .col-xs-2
              .panel.panel-body
                = yield :left_sidebar
            .col-xs-10
              .row
                .col-xs-12
                  .panel.panel-body
                    = yield
              = yield :footer_panel

