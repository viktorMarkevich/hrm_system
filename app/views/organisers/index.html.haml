= stylesheet_link_tag 'stickers'
= javascript_include_tag 'stickers'
= javascript_include_tag 'charCount'

.container
  .row
    .col-md-12
      .tip
        %p
          = 'Предстоящие события'
      - if @events.present?
        .items-list
          %table.table.table-hover.table-bordered.table-striped
            %thead
              %tr.table_head_color
                %th Событие
                %th Имя Вакансии
                %th Имя Кандидата
                %th Дата
            %tbody
              - @events.each do |event|
                %tr
                  %td
                    = link_to event.name, event, class: 'tooltips', title: [event.name,' - ', event.description], data: { toggle: 'tooltip', placement: 'top' }
                  - if event.staff_relation
                    %td= event.staff_relation.vacancy.name
                    %td= event.staff_relation.candidate.name
                  - else
                    %td= '------'
                    %td= '------'
                  %td
                    %span.label.label-warning
                      = event.will_begin_at.strftime('%e %b %H:%M')
      - else
        %ul.list-group
          %li.list-group-item.list-group-item-warning
            У Вас нет ни единого события!
      .row
        .col-md-12{ style: 'min-height: 5px; background-color: #222; border: 1px solid #fff;' }
  .row
    .col-md-12
      .tip
        %p
          = 'Последние действия на сайте: '
      - if @histories.present?
        .items-list
          %table.table.table-hover.table-bordered.table-striped.history
            %thead
              %tr.table_head_color
                %th Действие
                %th Ответственный
                %th Статус
                %th Дата
            %tbody
              - @histories.each  do |history|
                %tr
                  %td
                    = history.action
                  %td
                    = link_to history.responsible['full_name'], user_path(history.responsible['id'])
                  %td
                    = "Изменился на <strong>#{history.new_status}</strong>".html_safe
                    - if history.old_status
                      = " со старого #{history.new_status}"
                  %td
                    %span.label.label-warning
                      = history.created_at.strftime('%e %b %H:%M')
      - else
        %ul.list-group
          %li.list-group-item.list-group-item-warning
            У Вас нет ни единого события!
