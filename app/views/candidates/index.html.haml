.panel.panel-success
  .panel-heading.panel-title
    Кандидаты
  .panel-body
    .well
      .row
        .col-xs-6
          %code Искать в
          %button.btn.btn-default В Linkedin
          %button.btn.btn-default В Интернет
        .col-xs-offset-3.col-xs-3
          %code Импортировать с
          %button.btn.btn-default Почты
          %button.btn.btn-default Файла

    %table.table.table-bordered.table-hover
      %thead
        %tr
          %th №
          %th Кандидат
          %th Должность
          %th Регион
          %th Зарплата
          %th Ответственный
          %th Статус
          %th Добавлен
      %tbody
        - @candidates.each do |candidate|
          %tr
            %th= candidate.id
            %td= link_to candidate.name, candidate_path(candidate), id: 'profile-name'
            %td= candidate.desired_position
            %td= display_field_value_for(candidate.city_of_residence)
            %td= display_field_value_for(candidate.salary)
            %td= full_name_for(candidate.owner)
            %td= candidate.status
            %td= candidate.created_at.strftime('%F')
    = paginate @candidates

- content_for :left_sidebar do
  .panel-success
    .panel-heading
      Поиск
    .panel-body
      .form-group
        %input#inputEmail3.form-control{ placeholder: 'Введите слово' }
      .form-group
        %button.btn.btn-success{ type: 'submit' } Найти