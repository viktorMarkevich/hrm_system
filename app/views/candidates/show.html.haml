- perc = set_the_percentage_of_completed_fields(@candidate)
.row
  .col-md-12
    .row
      .col-md-3
        .tip{ style: 'font-size: 18px;'}
          = @candidate.name
      .col-md-6
        = link_to edit_candidate_path(@candidate) do
          .progress
            .progress-bar.progress-bar-danger.progress-bar-striped{ 'aria-valuemax' => '100',
                                                                    'aria-valuemin' => '0',
                                                                    'aria-valuenow' => "#{perc}",
                                                                    role: 'progressbar',
                                                                    style: "width: #{perc}%;" }
              = "#{perc}%"
      .col-md-2
        .pull-right
          %span.label.label-info
            = display_field_value_for(@candidate.status)
      .col-md-offset-1
    %hr
.row
  .col-md-3
    = render partial: 'left_sidebar'
    %hr
    %dl.dl-horizontal
      %dt Дата рождения:
      %dd= display_field_value_for(@candidate.birthday)
      %dt Город:
      %dd= display_field_value_for(@candidate.city_of_residence)
      %dt Желаемая должность:
      %dd= @candidate.desired_position
      %dt Хочу:
      %dd= "#{display_field_value_for(@candidate.salary)} #{@candidate.salary_format}"
    %hr
    = link_to 'Редактировать', edit_candidate_path(@candidate), class: 'btn btn-primary'
    = link_to 'Назад', :back, class: 'btn btn-default'

  .col-md-4
    = render partial: 'candidate_info', locals: { candidate: @candidate }
    %hr
  .col-md-4
    .tip
      %p Потенциальные вакансии:
    .btn-group
      %button.btn.btn-success{:type => "button"}= "Выберите вакансии для #{@candidate.name}"
      %button.btn.btn-info.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
        %span.caret
        %span.sr-only Toggle Dropdown
      %ul.dropdown-menu
        - @candidate_vacancies.each do |v|
          %li
            = link_to v.name, '#', id: "vacancy_#{v.id}"
    .vacancies_list{style: 'padding-top: 20px;'}
      = render partial: 'vacancies_list', locals: { vacancies: @candidate_vacancies }
  .col-md-offset-1