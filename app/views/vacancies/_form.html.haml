= form_for @vacancy do |f|
  - if @vacancy.errors.any?
    %h2 Возникшие ошибки:
    %ul
      - @vacancy.errors.full_messages.each do |message|
        %li
          = message
  .row
    .col-xs-6
      .form-group
        = f.label :name, 'Вакансия:'
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :salary, 'Зарплата:'
        = f.text_field :salary, class: 'form-control'

        = f.radio_button :salary_format, 'usd'
        = f.label :salary_format, 'USD'
        %br
        = f.radio_button :salary_format, 'uah'
        = f.label :salary_format, 'UAH'
      .form-group
        = f.label :region_id, 'Регион:'
        = f.select(:region_id,  options_for_select(Region.all.map{ |r| [r.name, r.id] }, @vacancy.region_id), {}, class: 'form-control')
      .form-group
        = f.label :status, 'Статус:'
        = f.select(:status, ['status1', 'status2', 'status3'], {}, class: 'form-control')
      .form-group
        = f.label :laguages, 'Языки:'
        = f.text_field :languages, class: 'form-control'
      .form-group
        = f.label :requirements, 'Требования:'
        = f.text_area :requirements, rows: 5, class: 'form-control'
      .form-group
        = f.submit @vacancy.new_record? ? 'Создать' : 'Обновить', class: 'btn btn-default'
        = link_to 'Назад', :back, class: 'btn btn-default'