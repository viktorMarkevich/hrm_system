%ul.nav.nav-tabs
  %li{ class: get_active(params, 'Найденные') }
    = link_to 'Найденные', vacancy_path(@vacancy, status: 'Найденные'), remote: true, class: 'btn btn-default'
  %li{ class: get_active(params, 'Отобранные') }
    = link_to 'Отобранные', vacancy_path(@vacancy, status: 'Отобранные'), remote: true, class: 'btn btn-primary'
  %li{ class: get_active(params, 'Собеседование') }
    = link_to 'Собеседование', vacancy_path(@vacancy, status: 'Собеседование'), remote: true, class: 'btn btn-info'
  %li{ class: get_active(params, 'Утвержден') }
    = link_to 'Утвержден', vacancy_path(@vacancy, status: 'Утвержден'), remote: true, class: 'btn btn-success'
  %li{ class: get_active(params, 'Не подходит') }
    = link_to 'Не подходит', vacancy_path(@vacancy, status: 'Не подходит'), remote: true, class: 'btn btn-warning'
  %li{ class: get_active(params, 'Отказался') }
    = link_to 'Отказался', vacancy_path(@vacancy, status: 'Отказался'), class: 'btn btn-danger'

- if candidates.present?
  %table.table.table-hover.table-responsive
    %thead
      %tr
        %th Имя
        %th Зарплата
        %th Перемещен
        %th Статус
    %tbody
      - candidates.each do |candidate|
        %tr
          %td= link_to candidate.name, candidate_path(candidate), id: 'profile-name'
          %td= desired_salary_for(candidate)
          %td
            %span.label.label-info
              = candidate.updated_at.strftime('%F в %I:%M')
          %td= select_tag(:applied_status, options_for_select(StaffRelation::STATUSES,
                              candidate.status_for_vacancy(vacancy)), class: 'status-picker',
                              data: { vacancyid: vacancy.id, candidateid: candidate.id } )
- else
  .panel-body
    %pНи один кандидат не был выбран для этой категории