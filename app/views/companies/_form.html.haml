= form_for @company, html: { class: 'form-horizontal' } do |f|
  .form-group
    = f.label :name, 'Имя:', class: 'col-md-1'
    .col-md-6
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :url, 'Страница компании:', class: 'col-md-1'
    .col-md-6
      = f.text_field :url, class: 'form-control'
  .form-group
    = f.label :region, 'Регион:', class: 'col-md-1'
    .col-md-6
      = f.text_field :region, class: 'form-control'
  .form-group
    = f.label :description, 'Полная информация:', class: 'col-md-1'
    .col-md-11
      = f.text_area :description, rows: 5, class: 'form-control'
  .form-group
    .col-md-offset-1
      = f.submit @company.new_record? ? 'Создать' : 'Обновить', class: 'btn btn-default'
      = link_to 'Назад', :back, class: 'btn btn-default'