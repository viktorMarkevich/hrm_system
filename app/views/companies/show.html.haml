= render partial: 'companies/left_sidebar'

.panel.panel-success
  .panel-heading.panel-title
    = @company.name
  .panel-body
    %table.table
      %thead
        %tbody
          %tr
            %th{scope: 'row'} Страница компании:
            %td
              = @company.url
          %tr
            %th{scope: 'row'} Регион:
            %td
              = @company.region.try(:name)
          %tr
            %th{scope: 'row'} Полная информация:
            %td
              = @company.description

= link_to 'Редактировать', edit_company_path(@company), class: 'btn btn-default'
= link_to 'Назад', companies_path, class: 'btn btn-default'