.col-xs-12
  = render partial: 'share/search'

  .row
    .col-xs-12
      .panel.add-shadows
        .panel-heading
          .panel-title.tip
            Компании
        .panel-body
          .items-list
            %table.table.table-bordered.table-hover
              %thead
                %tr
                  %th Имя
                  %th Страница
                  %th Кандидаты
                  %th Регион
                  %th Дата регистрации
                  %th Краткое описание

              %tbody
                - @companies.each do |company|
                  %tr
                    %td= link_to company.name, company_path(company), id: 'company-name'
                    %td= company.url
                    %td= company.candidates.count != 0 ? (link_to company.candidates.count, candidates_path(company_id: company.id)) : '0'
                    %td= company.region.try(:name)
                    %td= company.created_at.strftime('%F')
                    %td= truncate(company.description, length: 50)
  .row
    .col-xs-3
      = paginate @companies